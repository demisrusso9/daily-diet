generator client {
  provider = "prisma-client"
  output   = "../prisma/generated"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  meals     Meal[]
}

model Meal {
  id          String   @id @default(uuid())
  name        String
  description String
  isOnDiet      Boolean
  date        DateTime
  updatedAt   DateTime @updatedAt
  userId      String

  user User @relation(fields: [userId], references: [id])
}
