{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES2023",
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@prisma/*": [
        "./src/prisma/*"
      ],
      "@tests/*": [
        "./tests/*"
      ]
    },
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": [
    "src"
  ]
}